#!/bin/bash
set -o errexit

USERNAME=${1:-user}

docker-compose exec app bin/setnginxpwd $USERNAME

# docker-compose exec app sh <<"EOF"
# bin/setnginxpwd $USERNAME
# EOF

#uncomment the htpasswd line for enforcing password
sed -i "s/#htpwd#//g" nginx/nginx.conf.sample

bin/restart app

bin/fixowns
bin/fixperms
