#! /bin/bash

#comment the local certificate
line='ssl_certificate /etc/nginx/certs/nginx.crt;'
sed -i "/^$line/ c#$line" nginx/default.conf
line='ssl_certificate_key /etc/nginx/certs/nginx.key;'
sed -i "/^$line/ c#$line" nginx/default.conf

#uncomment the generated certificate
line='#ssl_certificate /var/www/letsencrypt/live/local-magento-test.net/fullchain.pem;'
sed -i "/^#$line/ c$line" nginx/default.conf
line='#ssl_certificate_key /var/www/letsencrypt/live/local-magento-test.net/privkey.pem;'
sed -i "/^#$line/ c$line" nginx/default.conf

#replace domain name
